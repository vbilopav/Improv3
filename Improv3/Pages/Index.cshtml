@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    #loading .spinner-grow {
        width: 6rem;
        height: 6rem;
    }

    select {
        cursor: pointer
    }
</style>

<div class="text-center" id="loading">
    <div class="spinner-grow" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>

<div class="container-fluid" style="display: none">
    <div class="form-group">
        <label for="company-input">Your company:</label>
        <div class="input-group mb-3">
            <input id="company-input" class="form-control form-control-lg" type="text" readonly aria-describedby="edit-company">
            <div class="input-group-append">
                <button id="edit-company" type="button" class="btn btn-outline-info" title="Edit company">
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true" style="display: none"></span>
                    &#9998;
                </button>
            </div>
        </div>

        <label for="sector-select">Select sector or create new one:</label>
        <div class="input-group mb-3">
            <select id="sector-select" class="custom-select custom-select-lg" style="cursor: pointer" aria-describedby="button-group">
                <option selected class="text-muted">select sector</option>
            </select>
            <div class="input-group-append" id="button-group">
                <button id="edit-sector" type="button" class="btn btn-outline-info" title="Edit selected sector">
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true" style="display: none"></span>
                    &#9998;
                </button>
                <button id="add-sector" type="button" class="btn btn-outline-info" title="New sector">
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true" style="display: none"></span>
                    &#10133;
                </button>
            </div>
        </div>
    </div>

    <div id="table-wrap">
        <div class="text-center">
            <div class="spinner-grow" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col" >Id</th>
                    <th scope="col">First name</th>
                    <th scope="col">Last name</th>
                    <th scope="col">Email</th>
                    <th scope="col" style="width: 30px;"></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modal-input-dlg" tabindex="-1" role="dialog" aria-labelledby="modal-input-center-title" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-input-center-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input id="modal-input" class="form-control form-control-lg" type="text" placeholder="" spellcheck="false" autocomplete="off">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="model-confirm-center-title" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="model-confirm-center-title">Delete employee record?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/js/pubsub.js" asp-append-version="false"></script>
    <environment include="Development">
        <script src="~/js/companyAdmin.js"></script>
        <script src="~/js/employees.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/companyAdmin.js" asp-append-version="true"></script>
        <script src="~/js/employees.js" asp-append-version="true"></script>
    </environment>
}
